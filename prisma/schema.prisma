generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  CUSTOMER
}

model Customers {
  id       String  @id @default(cuid())
  role     Roles[] @default([CUSTOMER])
  name     String
  email    String  @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}
